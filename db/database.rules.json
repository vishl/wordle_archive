{
  "rules": {
    ".read": true,
    "users":{
      "$uid":{
        //Only you can write your user
        ".write": "auth != null && auth.uid == $uid" 
      }
    },
    "followsUser":{
      "$otherId":{
        "$uid":{
          //You can only write your own user id in as a follower
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },
    "userFollows":{
      "$uid":{
        //You can only update followers for yourself
        ".write": "auth != null && auth.uid == $uid"
      }
    }
  }
}
